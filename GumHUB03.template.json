{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "azureFirewalls_AzFw01_name": {
            "defaultValue": "AzFw01",
            "type": "String"
        },
        "virtualNetworks_HUB_VNet_name": {
            "defaultValue": "HUB-VNet",
            "type": "String"
        },
        "publicIPAddresses_AzFw01_pip_name": {
            "defaultValue": "AzFw01-pip",
            "type": "String"
        },
        "routeTables_Azfw01_Routetable_name": {
            "defaultValue": "Azfw01-Routetable",
            "type": "String"
        },
        "applicationGateways_AzGatApp01_name": {
            "defaultValue": "AzGatApp01",
            "type": "String"
        },
        "publicIPAddresses_AzGatApp01_pip01_name": {
            "defaultValue": "AzGatApp01-pip01",
            "type": "String"
        }
    },
    "variables": {},
