            "location": "canadacentral",
            "tags": {
                "Environment": "HUB",
                "Project": "GUM"
            },
            "sku": {
                "name": "Standard"
            },
            "properties": {
                "ipAddress": "52.139.11.216",
                "publicIPAddressVersion": "IPv4",
